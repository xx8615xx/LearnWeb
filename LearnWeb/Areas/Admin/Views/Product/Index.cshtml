@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6 text-end">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>Add New Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Book Title</th>
                    <th>ISBN</th>
                    <th>
                        Price                      
                    </th>
                    <th>Author</th>
                    <th>Category</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.ID))
                {
                    <tr>
                        <td>
                            @obj.Title
                        </td>
                        <td>
                            @obj.ISBN
                        </td>
                        <td>
                            @obj.ListPrice
                        </td>
                        <td>
                            @obj.Author
                        </td>
                        <td>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-ID="@obj.ID" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-fill"></i>Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-ID="@obj.ID" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash2-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>